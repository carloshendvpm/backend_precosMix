{
    "openapi":"3.0.0",
    "info": {
        "title":"API Preços Mix",
        "description":"Api feita para o preços mix durante a 3ª etapa do ciclo de residência do Embarque Digital",
        "contact":{
            "email":"hencarlosdv@gmail.com"
        },
        "version":"1.0.0"
    },
    "servers": [
        {
            "url":"http://localhost:8080/",
            "description":"Api master"
        }
    ],
    "paths":{
        "/cadastrar-usuario": {
            "post":{
                "summary":"Cadastro de usuários",
                "description":"Essa rota será responsável por realizar o cadastro de usuários no sistema",
                "tags":["Usuarios"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref":"#/components/schemas/Usuario"
                            },
                        "examples":{
                            "Usuario":{
                                "value":{
                                    "tipo":"Admin",
                                    "nome":"Carlos Henrique",
                                    "email":"carlos@gmail.com"
                                }
                            }
                        }
                        }
                    }
                },
                "responses": {
                    "401": {
                      "description": "Já existe um usuario com este email!"
                    },
                    "200": {
                      "description": "Usuário cadastrado com sucesso!",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "$ref": "#/components/schemas/Usuario"
                          }
                        }
                      }
                    }
                  }
            }
        },
        "/listar-usuarios": {
            "get": {
              "description": "Lista usuários cadastrados",
              "summary": "Lista usuários cadastrados",
              "tags": ["Usuarios"],
              "responses": {
                "401": {
                    "description": "Não foi possível listar usuários cadastrados"
                },
                "200": {
                  "description": "Ok",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "$ref": "#/components/schemas/Usuario"
                      }
                    }
                  }
                }
              }
            }
          },
          "/atualizar-usuario": {
            "put": {
              "description": "atualiza usuários pelo ID",
              "summary": "atualiza usuários pelo ID",
              "tags": ["Usuarios"],
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "description": "atualiza usuario pelo ID",
                  "required": true
                }
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Usuario"
                    },
                    "examples": {
                      "Usuario": {
                        "value": {
                          "tipo": "Admin",
                          "nome": "Gabriel Torres",
                          "email": "gabriel@gmail.com"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "401": {
                    "description": "Não foi possível atualizar este usuário!"
                },
                "200": {
                  "description": "Ok",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "$ref": "#/components/schemas/Usuario"
                      }
                    }
                  }
                }
              }
            }
          },
        "/deleta-usuario/{id}": {
            "delete": {
                "description":"Deleta usuários pelo ID",
                "summary":"Deleta usuários pelo ID",
                "tags":["Usuarios"]

            }
        },
        "/cadastrar-produto":{
            "post":{
                "description":"Cadastra novos produtos",
                "summary":"Cadastra novos usuários",
                "tags":["Produtos"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref":"#/components/schemas/Produto"
                            },
                        "examples":{
                            "produto":{
                                "value":{
                                    "nome":"Sabão em pó",
                                    "descricao":"Usado para lavar roupas"
                                }
                            }
                        }
                    }
                    }
                },
                "responses": {
                    "200": {
                      "description": "Produto cadastrado com sucesso"
                    },
                    "401": {
                      "description": "Já existe um produto cadastrado!",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "$ref": "#/components/schemas/Produto"
                          }
                        }
                      }
                    }
                  }
            }
        },
        "listar-produtos":{
            "get":{
                "description":"Lista todos os produtos cadastrados",
                "summary":"Lista todos os produtos cadastrados",
                "tags":["Produtos"],
                "responses": {
                    "4001": {
                      "description": "Não há produtos para listar"
                    },
                    "401": {
                      "description": "Sucesfull!",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "$ref": "#/components/schemas/Produto"
                          }
                        }
                      }
                    }
                  }
            }   
    }
    },
    "components": {
        "schemas":{
            "Usuario":{
                "type":"object",
                "properties":{
                    "tipo":{
                        "type":"string"
                    },
                    "nome":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "id":{
                        "type":"string"
                    }
                }
            },
            "Produto": {
                "type":"object",
                "properties":{
                    "nome":{
                        "type":"string"
                    },
                    "id":{
                        "type":"string"
                    },
                    "descricao":{
                        "type":"string"
                    }
                }
            }
        }
       
     
    }
}